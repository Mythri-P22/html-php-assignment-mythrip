<?php
$employees = [
    ["name" => "John", "salary" => 5000],
    ["name" => "Jane", "salary" => 6000],
    ["name" => "Alice", "salary" => 7000],
];

$totalPayroll = 0;

foreach ($employees as $emp) {
    $name = $emp['name'];
    $salary = $emp['salary'];
    
    // Calculate bonus
    $bonus = ($salary > 5500) ? $salary * 0.10 : $salary * 0.05;
    $netSalary = $salary + $bonus;
    $totalPayroll += $netSalary;

    echo "Employee: $name<br>";
    echo "Base Salary: \$$salary<br>";
    echo "Bonus: \$$bonus<br>";
    echo "<strong>Net Salary: \$$netSalary</strong><br><br>";
}

echo "<hr>";
echo "<strong>Total Payroll (including bonuses): \$$totalPayroll</strong>";
?>
